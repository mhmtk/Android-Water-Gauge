<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mhmt.orientationfeedbackview.MainActivity">

  <com.mhmt.orientationfeedbackview.OrientationFeedbackView
      android:id="@+id/orientation_view_v"
      android:layout_width="50dp"
      android:layout_height="300dp"
      android:layout_alignParentStart="true"
      app:gauge_plane="YZ"
      app:gauge_threshold="10.0"
      app:gauge_ball_accept_color="@android:color/holo_green_dark"
      app:gauge_background_color="@android:color/black"
  />

  <com.mhmt.orientationfeedbackview.HorizontalOrientationFeedbackView
      android:id="@+id/orientation_view_h"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      app:gauge_plane="YX"
      app:gauge_threshold="10.0"
      app:gauge_ball_accept_color="@android:color/holo_green_dark"
      app:gauge_background_color="@android:color/black"
  />


</RelativeLayout>
